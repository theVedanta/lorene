      .card-stats .icon-big i {
        font-size: 2.8vw;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .card {
        padding: 0.6vh 2vw;
        box-shadow: 0 0 20px rgba(18, 18, 19, 0.218);
        width: 99%;
        overflow: hidden;
        margin-bottom: 1.2vh;
      }
      .first-row .card {
        padding-top: 3.4vh;
        padding-bottom: 3.4vh;
      }
      h4 {
        margin: 0;
      }
      table {
        overflow-x: hidden;
      }
      .card-stats .card-body .numbers .card-category {
        font-size: 1.2vw;
        white-space: nowrap;
      }
      .col-lg-3,
      .col-lg-6 {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .bal-col {
        display: flex;
        flex-direction: column;
        height: 35vh;
      }
      .bal-card {
        height: 68%;
        margin-bottom: 3%;
        display: flex;
        flex-direction: row;
      }
      .bal {
        flex: 2;
        display: flex;
        flex-direction: column;
        transform: translateY(7%);
        justify-content: center;
      }
      .bal h2 {
        font-weight: 500;
        font-size: 1.4vw;
        position: relative;
      }
      .bal h2::after {
        content: "";
        position: absolute;
        bottom: -100%;
        left: 0;
        width: 50%;
        height: 3px;
        background: rgba(82, 203, 206, 1);
      }
      .bal h3 {
        font-weight: 600;
        margin-top: 6%;
        font-size: 1.6vw;
      }
      .btn-section {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        flex-direction: column;
      }
      .btn-section .btn {
        width: 90%;
        font-size: 0.8vw;
        border-radius: 5px;
        padding-top: 1.6vh;
        padding-bottom: 1.6vh;
        margin: 0.85vh 0;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .btn-card {
        height: 30%;
        display: flex;
        margin: 0;
        padding: 0 0.8vw;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
      .btn-card .btn {
        margin-left: 0.5vw;
        margin-right: 0.7vw;
        padding: 1.4vh 1.4vw;
        font-size: 1.12vw;
        font-weight: 400;
        border-radius: 5px;
        text-transform: none;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .btn-card .btn i {
        margin-right: 0.7vw;
      }
      .card h4 {
        font-size: 2vh;
      }
      .card hr {
        margin: 1vh 0;
        width: 100%;
      }
      .table > thead > tr > th,
      .table > tbody > tr > th,
      .table > tfoot > tr > th,
      .table > thead > tr > td,
      .table > tbody > tr > td,
      .table > tfoot > tr > td {
        padding: 0.85vh 0;
        text-transform: none;
      }
      .table > thead > tr > th,
      .table > tbody > tr > th {
        padding-top: 0;
      }
      .table-responsive {
        height: 25vh;
      }
      .first-row .col-7 {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      .col-full {
        width: 100%;
        padding: 0 1.3vw;
      }
      .col-full .card {
        width: 100%;
        margin-bottom: 6vh;
      }
      .table-cont {
        overflow: hidden;
      }
      .table-responsive {
        overflow-y: scroll;
      }
      .upload {
        text-align: center;
        padding-bottom: 3vh;
        color: #208184;
        font-size: 1.2vw;
        font-weight: 500;
      }
      .upload a {
        color: #0e5456;
      }
      .upload a:hover {
        text-decoration: none;
      }
      .upload a i {
        color: #208184;
      }
      @media (max-width: 1400px) {
        .card-stats .icon-big i {
          font-size: 2.6vw;
        }
        .bal {
          transform: translateY(0);
        }
        .bal h2,
        .bal h3 {
          margin: 1.5vh 0;
        }
        .bal h2::after {
          bottom: -50%;
        }
        .first-row .card {
          padding: 0.7vh 1vw;
        }
        .first-row .card-body {
          padding: 1vh 0.5vw;
          padding-top: 3vh;
          padding-bottom: 3vh;
        }
        .card-body .col-5 {
          padding: 0;
        }
        .card-title {
          font-size: 1.4vw;
        }
        .card h4 {
          font-size: 2.3vh;
        }
      }
      @media (max-width: 1100px) {
        .btn-card .btn {
          padding: 1vh 1vw;
          margin: 0 0.5vw;
        }
        .table > thead > tr > th,
        .table > tbody > tr > th,
        .table > tfoot > tr > th,
        .table > thead > tr > td,
        .table > tbody > tr > td,
        .table > tfoot > tr > td {
